<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="boggleViewModel"
            type="com.example.italian_englishgames.boggle.BoggleViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".boggle.BoggleGameFragment">

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="61dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="61dp"
            app:columnCount="4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/time"
            app:rowCount="4">

            <Button
                android:id="@+id/letter00"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/boggle_button_no_border"
                android:foregroundGravity="center"
                app:layout_column="0"
                app:layout_row="0" />

            <Button
                android:id="@+id/letter01"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/boggle_button_no_border"
                android:text=""
                app:layout_column="1"
                app:layout_row="0" />

            <Button
                android:id="@+id/letter02"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/boggle_button_no_border"
                android:rotationX="0"
                android:text=""
                app:layout_column="2"
                app:layout_row="0" />

            <Button
                android:id="@+id/letter03"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/boggle_button_no_border"
                android:text=""
                app:layout_column="3"
                app:layout_row="0" />

            <Button
                android:id="@+id/letter10"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/boggle_button_no_border"
                android:text=""
                app:layout_column="0"
                app:layout_row="1" />

            <Button
                android:id="@+id/letter11"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/boggle_button_no_border"
                android:text=""
                app:layout_column="1"
                app:layout_row="1" />

            <Button
                android:id="@+id/letter12"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/boggle_button_no_border"
                android:text=""
                app:layout_column="2"
                app:layout_row="1" />

            <Button
                android:id="@+id/letter13"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/boggle_button_no_border"
                android:text=""
                app:layout_column="3"
                app:layout_row="1" />

            <Button
                android:id="@+id/letter20"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/boggle_button_no_border"
                android:text=""
                app:layout_column="0"
                app:layout_row="2" />

            <Button
                android:id="@+id/letter21"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/boggle_button_no_border"
                android:text=""
                app:layout_column="1"
                app:layout_row="2" />

            <Button
                android:id="@+id/letter22"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/boggle_button_no_border"
                android:text=""
                app:layout_column="2"
                app:layout_row="2" />

            <Button
                android:id="@+id/letter23"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/boggle_button_no_border"
                android:text=""
                app:layout_column="3"
                app:layout_row="2" />

            <Button
                android:id="@+id/letter30"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/boggle_button_no_border"
                android:text=""
                app:layout_column="0"
                app:layout_row="3" />

            <Button
                android:id="@+id/letter31"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/boggle_button_no_border"
                android:text=""
                app:layout_column="1"
                app:layout_row="3" />

            <Button
                android:id="@+id/letter32"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/boggle_button_no_border"
                android:text=""
                app:layout_column="2"
                app:layout_row="3" />

            <Button
                android:id="@+id/letter33"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/boggle_button_no_border"
                android:text=""
                app:layout_column="3"
                app:layout_row="3" />

        </androidx.gridlayout.widget.GridLayout>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="TEMPO: XX:XX"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar3" />

        <TextView
            android:id="@+id/foundWords"
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="@{boggleViewModel.foundWordsText}"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/checkWordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Controlla parola"
            app:layout_constraintBottom_toTopOf="@+id/foundWords"
            app:layout_constraintStart_toEndOf="@+id/cancelBtn"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout"
            app:layout_constraintVertical_bias="0.47" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="32dp"
            android:text="Annulla"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginTop="12dp"
            android:text="Punti: "
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@+id/time"
            app:layout_constraintTop_toBottomOf="@+id/toolbar3" />

        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@{boggleViewModel.points}"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/toolbar3" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>