<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="impiccato.ImpMenuFragment"
    android:background="@color/azzurro">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="352dp"
        android:text="@string/maxScoreImpiccato"
        android:textColor="@color/blu_scuro"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/startbutton"
        android:layout_width="185dp"
        android:layout_height="106dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="496dp"
        android:backgroundTint="@color/rosa"
        android:text="@string/giocaSing"
        android:textColor="@color/blu_scuro"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/infoButtonImp"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="46dp"
        android:backgroundTint="@color/blu"
        android:text="@string/info_game" />

</FrameLayout>