<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.italian_englishgames">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:enabled="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_round"
        android:supportsRtl="true"
        android:theme="@style/ourStyle">
        <activity android:name=".ContattiActivity"></activity>
        <activity android:name=".ProfileActivity" />
        <activity android:name=".ModifyProfileActivity" />
        <activity android:name=".NoConnectionActivity" />
        <activity android:name=".auth.CompleteRegisterActivity" />
        <activity android:name=".boggle.BoggleActivity" android:screenOrientation="portrait" />
        <activity android:name=".auth.LoginActivity"/>
        <activity android:name=".auth.RegisterActivity" />
        <activity android:name=".memory.MemActivity" android:screenOrientation="portrait"/>
        <activity android:name=".impiccato.ImpActivity" android:screenOrientation="portrait"/>
        <activity
            android:name=".MainActivity"
            android:theme="@style/ourStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <uses-library android:name="android.test.runner"/>
    </application>
</manifest>